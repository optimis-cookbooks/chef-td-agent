# LOG FORWARDER CONFIG

<% partial_path = "optimis_partials" %>
<% aggregator = { name: 'ServicesRC', ip: '172.30.42.2' } %>

<%= render "debug", source: "#{partial_path}/debug.erb" %>

<%= render "in_tail_pt_log", source: "#{partial_path}/in_tail_pt_log.erb", variables: {path: "/var/www/optimis/log/rc.log", pos_file: "/var/log/td-agent/rc.log.pos"} %>

<%= render "in_tail_hl7_log", source: "#{partial_path}/in_tail_hl7_log.erb", variables: {path: "/var/www/optimis/log/hl7_rc.log", pos_file: "/var/log/td-agent/hl7_rc.log.pos"} %>

<%= render "out_file_fluentd_log", source: "#{partial_path}/out_file_fluentd_log.erb" %>

<%= render "out_forward_pt_log", source: "#{partial_path}/out_forward_pt_log.erb", variables: {name: aggregator[:name], host: aggregator[:ip]} %>

<%= render "out_forward_hl7_log", source: "#{partial_path}/out_forward_hl7_log.erb", variables: {name: aggregator[:name], host: aggregator[:ip]} %>

<match **>
  type null
</match>
